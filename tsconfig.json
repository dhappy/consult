{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
  },
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": ["node_modules/"],
}
